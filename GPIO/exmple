int main(void) {
    /* 注册 GPIO 驱动，并初始化 GPIO 时钟 */
    gpio_register_driver(&gpio_driver_stm32);

    /* 配置 GPIOA Pin 5 为推挽输出 */
    gpio_pin_mode(GPIOA, GPIO_Pin_5, GPIO_MODE_OUTPUT_PP, GPIO_NOPULL);

    /* 控制 GPIO 输出 */
    gpio_write(GPIOA, GPIO_Pin_5, true); // 输出高电平

    /* 读取 GPIO 电平 */
    bool level = gpio_read(GPIOA, GPIO_Pin_5);

    /* 翻转 GPIO 电平 */
    gpio_toggle(GPIOA, GPIO_Pin_5);

    while (1) {
        /* 你的应用代码 */
    }
}